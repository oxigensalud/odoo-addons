<odoo>
    <record
        id="website_sale_public_description_product_template_view_form"
        model="ir.ui.view"
    >
        <field name="name">product.template.website.sale.public.description.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='shop']/group/field[@name='is_published']"
                position="after"
            >

                <field name="woocommerce_enabled" position="move" />
                <field name="professional_product" position="move" />
                <field name="medical_prescription_required" position="move" />
                <field name="website_ribbon_id" position="move" />
                <field name="inventory_availability" position="move" />
                <field name="website_sequence" position="move" />
                <xpath
                    expr="//group[@name='shop']/group/field[@name='website_name']"
                    position="move"
                />
                <field name="public_description" position="move" />
                <field name="public_short_description" position="move" />
                <field name="public_categ_ids" position="move" />
                <field name="alternative_product_ids" position="move" />
                <field name="accessory_product_ids" position="move" />
                <field name="slug_name" position="move" />
            </xpath>
             <xpath expr="//field[@name='public_description']" position="attributes">
                <attribute name="string">Product description</attribute>
            </xpath>
            <xpath
                expr="//field[@name='public_short_description']"
                position="attributes"
            >
                <attribute name="string">Product short description</attribute>
            </xpath>
            <xpath expr="//field[@name='public_categ_ids']" position="attributes">
                <attribute name="string">Product categories</attribute>
            </xpath>
            <xpath
                expr="//field[@name='alternative_product_ids']"
                position="attributes"
            >
                <attribute
                    name="string"
                >Targeted sales (alternative products)</attribute>
            </xpath>
            <xpath expr="//field[@name='accessory_product_ids']" position="attributes">
                <attribute name="string">Cross-selling (accessories)</attribute>
            </xpath>
            <xpath expr="//field[@name='slug_name']" position="attributes">
                <attribute name="string">Permanent link</attribute>
            </xpath>
        </field>
    </record>
</odoo>
